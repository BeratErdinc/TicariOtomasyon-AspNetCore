@using TicariOtomasyon.Models
@model List<SatısHareket>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SatısId</th>
            <th>@item.Ürünler.UrunAd</th>
            <th>@item.Cari.CariAd</th>
            <th>@item.Personel.PersonelAd</th>
            <th>@item.Adet</th>
            <th>@item.Fiyat</th>
            <th>@item.ToplamTutar</th>
            <td><a href="/Cari/CariGetir/@item.CariId" class="btn btn-warning">Güncelle </a></td>
          <td><a href="/Cari/MusteriSatıs/@item.CariId" class="btn btn-dark">Satış Detay </a></td>


        </tr>
    }

</table>
<a href="" class="btn btn-dark"> Yeni Cari Ekle</a>

