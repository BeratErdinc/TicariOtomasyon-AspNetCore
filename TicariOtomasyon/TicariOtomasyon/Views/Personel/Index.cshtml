@using TicariOtomasyon.Models
@model List<Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-table-striped">
    <tr>
        <td>Id</td>
        <td>Personel Adı</td>
        <td>Personel Soyad</td>
        <td>Personel Görsel</td>
        <td>Personel Departman</td>
        <td>Sil</td>
        <td>Güncelle</td>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelId</td>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td>@x.PersonelGorsel</td>
            <td>@x.Deparman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetir/@x.PersonelId" class="btn btn-danger">Güncelle </a></td>
          <td><a href="/Departman/DepartmanPersonelSatış/@x.PersonelId" class="btn btn-primary">Departman Detay </a></td>

        </tr>
    }

  
</table>
<a href="/Personel/PersonelGetir" class="btn btn-dark" > Yeni Departman
    </a>

