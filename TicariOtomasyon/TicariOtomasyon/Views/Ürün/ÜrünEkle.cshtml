@model TicariOtomasyon.Models.Ürünler
@{
    ViewData["Title"] = "ÜrünEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
   <label>Ürün Adı</label>
   @Html.TextBoxFor(x=>x.UrunAd, new{@class="form-control"})
     <label>Marka</label>
   @Html.TextBoxFor(x=>x.Marka, new{@class="form-control"})
     <label>Stok</label>
   @Html.TextBoxFor(x=>x.Stok, new{@class="form-control"})
     <label>Alış Fiyat</label>
   @Html.TextBoxFor(x=>x.AlısFiyat, new{@class="form-control"})
     <label>Satış Fiyat</label>
   @Html.TextBoxFor(x=>x.SatısFiyat, new{@class="form-control"})

    <label>Kategori</label>
     @Html.DropDownListFor(x=>x.KategoriId,(List<SelectListItem>)ViewBag.dgr, new{@class="form-control"})
     <label>Görsel</label>
   @Html.TextBoxFor(x=>x.Gorsel, new{@class="form-control"})
   <label>Durum</label>
   @Html.TextBoxFor(x=>x.Durum, new {@class="form-control"})
   @Html.HiddenFor(x=>x.UrunId)

   <button class="btn- btn-dark"> Ürün Ekle</button>
</form>

