@using TicariOtomasyon.Models
@model List<Kategori>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Kategori Adı</td>
        <td>Sil</td>
        <td>Güncelle</td>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.KategoriId</td>
            <td>@x.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@x.KategoriId">Sil </a></td>
            <td><a href="/Kategori/KategoriGetir/@x.KategoriId">Güncelle </a></td>
        </tr>
    }

  
</table>
<a href="/Kategori/YeniKategori" class="btn btn-dark" > Yeni Kategori
    </a>

